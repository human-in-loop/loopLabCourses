import { useQuery } from "@tanstack/react-query";
import { Course } from "@shared/schema";
import { apiRequest } from "./queryClient";

export function useCourses() {
  return useQuery<Course[]>({
    queryKey: ["/api/courses"],
  });
}

export function useCourse(id: string) {
  return useQuery<Course>({
    queryKey: ["/api/courses", id],
    enabled: !!id,
  });
}

export async function getCourse(id: string): Promise<Course> {
    const response = await apiRequest("GET", `/api/admin/courses/${id}`);
    return response.json();
}

export async function updateCourse(id: string, data: Partial<Course>): Promise<Course> {
    const response = await apiRequest("PUT", `/api/admin/courses/${id}`, data);
    return response.json();
}

export function useCourseAccess(courseId: string) {
  return useQuery<{ hasAccess: boolean; reason?: string }>({
    queryKey: ["/api/courses", courseId, "access"],
    enabled: !!courseId,
  });
}

export function useUserEnrollments() {
  return useQuery({
    queryKey: ["/api/enrollments/my"],
  });
}